<div class="col-xl-9">
        <h1 class="display-4 mb-3">User Profile</h1>
      </div>
<section class="position-relative" style="margin-top: 5rem;">
  <div class="container position-relative">
    <div class="">

      <!--Profile info header-->
      <div class="position-relative pt-9 pb-9 pb-lg-11">
        <div class="row">
          <div class="col-lg-3 mb-5 mb-lg-0">
            <div class=" position-relative z-index-1">
              <div class="card shadow p-3">
                <!--profile image-->
                <h4 class="mb-2"><%= @user.name %> </h4>
                <ul class="list-group list-group-flush mb-0">
                  <li class="d-flex align-items-center list-group-item px-0">
                    <i class="bx bxs-envelope me-2  text-muted"></i>
                    <a href="mailto:<%= @user.email%>" class="small link-hover-decoration"><%= @user.email%></a>
                  </li>
                  <% unless @user.phone.to_s.empty? %>
                  <li class="d-flex align-items-stretch list-group-item px-0">
                    <i class="bx bxs-phone-call me-2 align-middle text-muted"></i>
                    <a href="tel:<%= @user.phone%> " class="small link-hover-decoration"><%= @user.phone %></a>
                  </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </section>