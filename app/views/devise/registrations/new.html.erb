<main>
  <!-- Breadcrumb Area Start -->
  <section class="breadcrumb-section breadcrumb-bg">
    <div class="container">
      <div class="breadcrumb-text">
        <h1 class="title wow fadeInUp">Register</h1>
      </div>
    </div>
  </section>
  <!-- End of Breadcrumb Area -->

  <!-- Registration Area Start -->
  <div class="login-area section-padding">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10">
          <div class="login-card">
            <!-- Logo -->
            <div class="logo mb-40">
              <a href="index.html" class="mb-30 d-block">
                <img src="/assets/logo/Logo-charitfix.png" alt="logo">
              </a>
            </div>
            <!-- Form -->
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="contact-form mb-24">
                <%= f.label :name, class: "contact-label" %>
                <%= f.text_field :name, class: "form-control contact-input", placeholder: "Enter Your Name" %>
              </div>

              <div class="contact-form mb-24">
                <%= f.label :email, class: "contact-label" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control contact-input", placeholder: "Enter Your Email" %>
              </div>

              <div class="contact-form mb-24">
                <%= f.label :password, class: "contact-label" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control contact-input password-input", placeholder: "Enter Password" %>
                <i class="toggle-password ri-eye-line"></i>
              </div>

              <div class="contact-form mb-24">
                <%= f.label :password_confirmation, class: "contact-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control contact-input password-input", placeholder: "Confirm Password" %>
                <i class="toggle-password ri-eye-line"></i>
              </div>

              <div class="actions mb-20">
                <%= f.submit "Register", class: "btn-primary-fill justify-content-center" %>
              </div>
            <% end %>

            <div class="login-footer">
              <div class="create-account">
                <p>
                  Already have an account?
                  <a href="<%= new_user_session_path %>">
                    <span>Login</span>
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End of Registration Area -->
</main>
