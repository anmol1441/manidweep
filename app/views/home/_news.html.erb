      <section class="our-event bottom-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-7">
        <!-- Section Title -->
        <div class="section-tittle text-center mb-50">
          <h2 class="title font-700">News And Events</h2>
        </div>
      </div>
    </div>
    <div class="row gy-24">
      <% @news_and_events.each_with_index do |event, index| %>
        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper">
          <div class="single-event h-calc wow fadeInUp" data-wow-delay="<%= wow_delay(index) %>s">
            <div class="event-img position-relative">
              <a href="<%= event.details_link %>">
                <%= image_tag event.image_url, class: 'img-fluid w-100', alt: event.title %>
              </a>
            </div>
            <div class="event-info">
              <div class="d-flex justify-content-between align-items-center gap-6">
                <div class="event-info-title">
                  <div class="flex gap-15 mb-18 align-items-center flex-wrap">
                    <div class="date flex gap-12 align-items-center">
                      <i class="ri-time-line"></i>
                      <p class="info"><%= event.date.strftime('%d %b %Y') %></p>
                    </div>
                    <div class="map flex gap-12 align-items-center">
                      <i class="ri-map-pin-line"></i>
                      <p class="info"><%= event.location %></p>
                    </div>
                  </div>
                  <h4><a class="title text-capitalize" href="<%= event.details_link %>"><%= event.title %></a></h4>
                </div>
                <a href="<%= event.details_link %>" class="btn-arrow"><i class="ri-arrow-right-line"></i></a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
