<section class="blog-section-two section-padding2">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-7">
        <!-- Section Title -->
        <div class="section-title text-center mb-50">
          <h2 class="title font-700">Activities Under Selfless Social Service</h2>
        </div>
      </div>
    </div>
    <div class="row gy-24">
      <% @activities.each do |activity| %>
        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper">
          <div class="single-blog h-calc wow fadeInLeft" data-wow-delay="0.1s">
            <div class="blog-img position-relative">
              <a href="<%= activity.link %>">
                <%= image_tag activity.image_url, class: 'img-fluid w-100', alt: activity.title %>
              </a>
            </div>
            <div class="blog-info">
              <div class="d-flex justify-content-between align-items-center">
                <div class="blog-info-title">
                  <h4 class="title text-capitalize">
                    <a href="<%= activity.link %>"><%= activity.title %></a>
                  </h4>
                  <p class="subtitle">
                    <%= activity.description %>
                  </p>
                  <a href="<%= activity.link %>" class="imp-link">
                    Read More <i class="ri-arrow-right-line"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
