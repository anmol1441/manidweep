<section class="our-event bottom-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-7">
        <!-- Section Title -->
        <div class="section-tittle text-center mb-50">
          <h2 class="title font-700">Publications</h2>
        </div>
      </div>
    </div>
    <div class="row gy-24">
      <% @publications.each_with_index do |publication, index| %>
        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper">
          <div class="single-event h-calc wow fadeInUp" data-wow-delay="<%= wow_delay(index) %>s">
            <div class="event-img position-relative">
              <a href="<%= publication.details_link %>">
                <%= image_tag publication.image_url, class: 'img-fluid w-100', alt: publication.title %>
              </a>
            </div>
            <div class="event-info">
              <div class="d-flex justify-content-between align-items-center gap-6">
                <div class="event-info-title">
                  <h4><a class="title text-capitalize" href="<%= publication.details_link %>"><%= publication.title %></a></h4>
                </div>
                <a href="<%= publication.details_link %>" class="btn-arrow"><i class="ri-arrow-right-line"></i></a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

      